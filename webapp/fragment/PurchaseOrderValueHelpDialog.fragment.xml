<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <TableSelectDialog
        id="valueHelpDialogPO"
        title="Select Purchase Order"
        liveChange="onPOSearch"
        confirm="onPOSelect"
        cancel="onPOCancel"
        noDataText="No Purchase Orders Found"
        items="{
            path : 'POModel>/results'
        }"
    >
        <columns>
            <Column>
                <header>
                    <Text text="PO No" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="PO Item" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Plant" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Plant Name" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Mat Group" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Material#" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Description" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Batch" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Vendor" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Vendor Name" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Quantity" />
                </header>
            </Column>
            <Column>
                <header>
                    <Text text="Unit" />
                </header>
            </Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Text text="{POModel>Ebeln}" />
                    <Text text="{POModel>Ebelp}" />
                    <Text text="{POModel>Werks}" />
                    <Text text="{POModel>Werks_Name}" />
                    <Text text="{POModel>Matkl}" />
                    <Text text="{POModel>Matnr}" />
                    <Text text="{POModel>Maktx}" />
                    <Text text="{POModel>Charg}" />
                    <Text text="{POModel>Lifnr}" />
                    <Text text="{POModel>LifnrName}" />
                    <Text text="{POModel>Menge}" />
                    <Text text="{POModel>Meins}" />
                </cells>
            </ColumnListItem>
        </items>
    </TableSelectDialog>
</core:FragmentDefinition>
<!--++EOC REQ0032724 - Purchase Order SelectDialog Fragment for Insp Lot - Sharath -->
