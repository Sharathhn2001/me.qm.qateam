<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified"
>
    <Dialog
        id="uploadDialog"
        title="{i18n>massUploadTitle}"
        draggable="true"
        resizable="true"
        contentWidth="500px"
        class="sapUiContentPadding"
    >
        <VBox
            width="100%"
            id="vboxUploadContent"
            renderType="Bare"
        >
            <Title
                text="{i18n>selectOperations}"
                level="H4"
                class="sapUiTinyMarginBottom"
            />

            <VBox
                id="operationCheckBoxVBox"
                class="sapUiSmallMarginBottom"
            />

            <unified:FileUploader
                id="fileUploader"
                name="uploadFile"
                fileType="xlsx,xls"
                change="onFileChange"
                placeholder="{i18n>chooseExcelFile}"
                width="100%"
            />

            <Text
                id="fileSizeText"
                text="{i18n>fileSizeDefault}"
                class="sapUiTinyMarginTop"
            />
        </VBox>

        <buttons>
            <Button
                text="{i18n>cancel}"
                press="onCloseDialog"
            />
            <Button
                text="{i18n>upload}"
                type="Emphasized"
                press="onMassUpload"
            />
        </buttons>
    </Dialog>
</core:FragmentDefinition>
