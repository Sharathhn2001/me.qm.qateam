<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:unified="sap.ui.unified">

    <Dialog
        id="uploadDialog"
        title="Mass Upload"
        draggable="true"
        resizable="true"
        contentWidth="500px"
        class="sapUiContentPadding">

        <VBox width="100%" id="vboxUploadContent" renderType="Bare">

            <Title text="Select Operations" level="H4" class="sapUiTinyMarginBottom"/>

            <VBox id="operationCheckBoxVBox" class="sapUiSmallMarginBottom"/>

            <unified:FileUploader
                id="fileUploader"
                name="uploadFile"
                fileType="xlsx,xls"
                change="onFileChange"
                placeholder="Choose Excel file"
                width="100%"/>

            <Text id="fileSizeText" text="File Size: 0 MB" class="sapUiTinyMarginTop"/>
        </VBox>

        <buttons>
            <Button text="Cancel" press="onCloseDialog"/>
            <Button text="Upload" type="Emphasized" press="onMassUpload"/>
        </buttons>

    </Dialog>
</core:FragmentDefinition>
