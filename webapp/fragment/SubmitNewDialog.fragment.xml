<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
>
    <Dialog title="{i18n>SUBMIT_NEW_TITLE}">
        <content>
            <f:SimpleForm
                id="SimpleFormsubmitnew"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
            >
                <f:content>
                    <Label
                        text="{i18n>PURCHASE_ORDER}"
                        required="true"
                    />
                    <Input
                        id="create_purchaseOrder"
                        value="{
        parts: [
            'SubmitNewModel>/Ebeln',
            'SubmitNewModel>/Ebelp'
        ],
        formatter: '.formatPOValue'
    }"
                        showValueHelp="true"
                        valueHelpRequest=".onPurchaseOrderValueHelpRequested"
                        change="onPurchaseOrderChangeInsp"
                        showSuggestion="true"
                        liveChange=".onBlockManualPOInput"
                        placeholder="Click on search option to select PO"
                        suggestionItems="{ path: 'POModel>/results' }"
                    >
                        <core:ListItem
                            key="{POModel>Ebeln}"
                            text="{POModel>Ebeln}"
                            additionalText="{POModel>Ebelp}"
                        />
                    </Input>
                    <Label
                        text="{i18n>MATERIAL}"
                        required="true"
                    />
                    <Input
                        id="create_material"
                        value="{SubmitNewModel>/Matnr}"
                        editable="true"
                    />

                    <Label
                        text="{i18n>INVENTORYBATCH}"
                        required="true"
                    />
                    <Input
                        id="create_batch"
                        value="{SubmitNewModel>/Charg}"
                        editable="true"
                        liveChange=".onBatchChange"
                        placeholder="Please Enter Batch"
                    />

                    <Label
                        text="{i18n>FORMULA}"
                        required="true"
                    />
                    <ComboBox
                        id="idFormulaCB"
                        selectedKey="{SubmitNewModel>/Zzhbcformula}"
                        placeholder="Select Formula"
                        items="{FormulaModel>/results}"
                        change=".onFormulaChange"
                    >
                        <core:ListItem
                            key="{FormulaModel>Zzhbcformula}"
                            text="{FormulaModel>Zzhbcformula}"
                        />
                    </ComboBox>
                </f:content>
            </f:SimpleForm>
        </content>

        <beginButton>
            <Button
                text="{i18n>SUBMIT}"
                type="Emphasized"
                press="onSubmitPress"
            />
        </beginButton>

        <endButton>
            <Button
                text="{i18n>CANCEL}"
                press="onCancelPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
